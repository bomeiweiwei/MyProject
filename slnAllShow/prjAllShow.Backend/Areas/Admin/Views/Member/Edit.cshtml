@model AllShowDTO.MemberSettingDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>編輯會員</h4>
<hr />
<div class="row">
    <div class="col-md-4" id="app">
        <form asp-action="Edit"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(m=>m.Id)
                @Html.HiddenFor(m=>m.AuserId)
                @Html.HiddenFor(m=>m.MemPic)
                @Html.HiddenFor(m=>m.MemEmail)
            </div>
            <div class="form-group">
                <label asp-for="MemPwd" class="control-label"></label>
                <input asp-for="MemPwd" class="form-control" />
                <span asp-validation-for="MemPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" id="ChangePwd" name="ChangePwd" value="true" 
                            @{
                                if (Model.ChangePwd.HasValue && Model.ChangePwd.Value)
                                {
                                    @:checked
                                }
                            }/>
                    <label for="ChangePwd" class="form-check-label">修改密碼</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MemDiminutive" class="control-label"></label>
                <input asp-for="MemDiminutive" class="form-control" />
                <span asp-validation-for="MemDiminutive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemName" class="control-label"></label>
                <input asp-for="MemName" class="form-control" />
                <span asp-validation-for="MemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemSex" class="control-label"></label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="MemSex1" name="MemSex" value="0" 
                  @if(Model.MemSex=="0")
                  {
                    @:checked
                  }
                  >
                  <label class="form-check-label" for="MemSex1">女</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="MemSex2" name="MemSex" value="1"
                  @if(Model.MemSex=="1")
                  {
                    @:checked
                  }
                  >
                  <label class="form-check-label" for="EmpSex2">男</label>
                </div>
                <span asp-validation-for="MemSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemTel" class="control-label"></label>
                <input asp-for="MemTel" class="form-control" />
                <span asp-validation-for="MemTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemAddress" class="control-label"></label>
                <input asp-for="MemAddress" class="form-control" />
                <span asp-validation-for="MemAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemPic" class="control-label"></label>
                <div>
                    <img v-if="MemPicImg" :src="MemPicImg" width="300" />
                </div>
                <div class="custom-file">
                    <input type="file" id="File_MemPic" name="File_MemPic" class="custom-file-label" v-on:change="handelFileUpload" />
                    <label for="File_MemPic" class="custom-file-label">@Html.DisplayNameFor(model => model.MemPic)</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MemAccountState" class="control-label"></label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="MemAccountState1" name="MemAccountState" value="0"
                  @if(Model.MemAccountState=="0")
                  {
                    @:checked
                  }
                  >
                  <label class="form-check-label" for="MemAccountState1">停用</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="MemAccountState2" name="MemAccountState" value="1"
                  @if(Model.MemAccountState=="1")
                  {
                    @:checked
                  }
                  >
                  <label class="form-check-label" for="MemAccountState2">啟用</label>
                </div>
                <span asp-validation-for="MemAccountState" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(m=>m.MemCheckNumber)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m=>m.MemCreateDate)
            </div>
            <div class="form-group">
                <label asp-for="MemBirth" class="control-label"></label>
                <input asp-for="MemBirth" class="form-control" />
                <span asp-validation-for="MemBirth" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-action="Index" class="btn btn-light">回到列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/scripts/Admin/Member/Edit.js"></script>
}
