@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>廠商註冊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="ShopSelected" class="control-label"></label>
                @Html.DropDownList("ShopSelected", ViewBag.IsCustomerRole, "請選擇", new { id = "ShopSelected", @class = "form-control", required = "required" })
            </div>
            
            <div class="form-group">
                <input type="submit" value="發送確認信" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <span class="text-danger">@ViewBag.ShowErrorMsg</span>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}