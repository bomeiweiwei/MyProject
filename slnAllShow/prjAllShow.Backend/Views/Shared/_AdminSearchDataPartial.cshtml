
@{
    string act = (string)ViewData["Act"] ?? "";
    string showStr = "";
    if (!string.IsNullOrEmpty(act) && act == "Employee")
    {
        showStr = "員工姓名";
    }
    else if (!string.IsNullOrEmpty(act) && act == "Member")
    {
        showStr = "會員姓名";
    }
    else if (!string.IsNullOrEmpty(act) && act == "Shop")
    {
        showStr = "商店名稱";
    }
}

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            @showStr: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" id="txtSearchString"/>
            <input type="submit" value="搜尋" class="btn btn-secondary" />
        </p>
    </div>
</form>